{
  "version": 2,
  "builds": [
    {
      "src": "api/dist/app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/dist/**"] }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
