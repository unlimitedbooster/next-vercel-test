{
  "name": "mrc",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist",
    "build:api": "tsc --project tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "start:api": "node dist/server.js",
    "start:frontend": "cd frontend && npm start",
    "dev:api": "nodemon api/src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "build": "concurrently \"npm run build:api\" \"npm run build:frontend\""
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@supabase/supabase-js": "^2.45.4",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "next": "^14.2.13",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
